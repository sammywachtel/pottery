{
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "scripts": {
    "validate": "./scripts/validate-adaptive.sh",
    "quality:check": "./scripts/validate-adaptive.sh",
    "setup:dev": "./setup-dev.sh",
    "precommit:install": "pre-commit install",
    "precommit:run": "pre-commit run --all-files",
    "frontend:dev": "cd frontend && flutter run -d chrome --dart-define=API_BASE_URL=http://localhost:8000",
    "frontend:build": "cd frontend && flutter build web --dart-define=API_BASE_URL=https://pottery-api-1073709451179.us-central1.run.app",
    "frontend:lint": "cd frontend && flutter analyze",
    "frontend:lint:fix": "cd frontend && dart fix --apply",
    "frontend:type-check": "cd frontend && flutter analyze",
    "frontend:test": "cd frontend && flutter test",
    "backend:dev": "cd backend && uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "backend:format": "cd backend && black . && isort .",
    "backend:lint": "cd backend && flake8 . && black --check . && isort --check-only .",
    "backend:test": "cd backend && python -m pytest",
    "dev": "concurrently \"npm run frontend:dev\" \"npm run backend:dev\"",
    "lint": "npm run frontend:lint && npm run backend:lint",
    "lint:fix": "npm run frontend:lint:fix && npm run backend:format",
    "test": "npm run frontend:test && npm run backend:test",
    "infra:setup": "cd backend && ./scripts/setup-infrastructure.sh",
    "infra:cors:local": "cd backend && ./scripts/manage-cors.sh apply local",
    "infra:cors:prod": "cd backend && ./scripts/manage-cors.sh apply prod",
    "infra:cors:status": "cd backend && ./scripts/manage-cors.sh status",
    "infra:cors:remove": "cd backend && ./scripts/manage-cors.sh remove"
  }
}
